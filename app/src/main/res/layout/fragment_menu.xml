<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ff8200"
    android:layout_height="match_parent"
    tools:context=".view.MenuFragment">

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="MENU"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_height="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_height="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="210dp"
        android:textStyle="bold"
        android:id="@+id/id_menu_start_game"
        android:text="-start game-"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/id_menu_tv_cash"
        android:layout_width="210dp"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:text="your cash: 100$"
        android:layout_gravity="center"
        android:layout_height="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="210dp"
        android:textStyle="bold"
        android:id="@+id/id_menu_tutorial"
        android:text="-tutorial-"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="210dp"
        android:id="@+id/id_menu_exit"
        android:textStyle="bold"
        android:text="-exit-"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/id_menu_image_cards"
        android:layout_width="374dp"
        android:layout_height="239dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />










</LinearLayout>